<p id="notice"><%= notice %></p>
<div class="container d-flex justify-content-center" id="carousel_place">
  <%= render 'shared/carousel' %>
</div>

<div class="container" id="Table_place">
  <h1 class="text-center mb-5" id="Index_title">Veja nossos produtos, direto do produtor!</h1>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Pre√ßo</th>
        <th scope="col">Vendedor</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.quantity %></td>
          <td>R$ <%= product.price %></td>
          <td><%= product.user.email %></td>
          <td><%= link_to 'Detalhar', product, class: "btn btn-primary rounded" %></td>

          <% if product.user == current_user %>
            <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-warning rounded" %></td>
          <% end %>

          <% if product.user == current_user %>
            <td><%= link_to 'Apagar', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger rounded" %></td>
          <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <!-- alterar o caminho para a home?? -->
  <div class="container d-flex justify-content-center mb-5">
    <% if @user != current_user %>
      <%= link_to 'New Product', new_product_path, class: "btn btn-success w-50 rounded" %>
    <% end %>
  </div>
</div>


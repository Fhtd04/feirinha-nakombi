<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Price:</strong>
  R$ <%= @product.price %>,00
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.email %>
</p>

<% if @product.user == current_user %>
  <td><%= link_to 'Edit', edit_product_path(@product) %></td>
<% end %>



<% if current_user %>
  <%= simple_form_for [@product] do |f|%>
    <%= f.input :quantity %>
    <td><%= link_to 'Comprar', product_order_path(@product_id) %></td>
  <% end %>
<% end %>

<%= link_to 'Back', products_path %>

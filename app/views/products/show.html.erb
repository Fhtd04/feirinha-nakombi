<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Price:</strong>
  R$ <%= @product.price %>,00
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.email %>
</p>

<% if @product.user == current_user %>
  <td><%= link_to 'Edit', edit_product_path(@product) %></td>
<% end %>

<% if @product.user != current_user && current_user%>
  <%= simple_form_for [@product, @order] do |f|%>
    <%= f.input :ask %>
    <%= f.button :submit, value: "Comprar" %>
  <% end %>
<% end %>


<%= link_to 'Back', products_path %>

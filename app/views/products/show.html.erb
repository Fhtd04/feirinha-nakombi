<div class="container d-flex justify-content-center">
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag @product.photo.key, class: "card-img-top d-block w-100" %>
    <div class="card-body">
      <div class="card_title">
        <h2 class="card-title"><%= @product.name %></h2>
      </div>
      <div class="card_text d-flex justify-content-between">
        <h4>Quantidade</h4>
        <h6><%= @product.quantity %></h6>
      </div>
      <div class="card_text d-flex justify-content-between">
        <h4>Valor unit.</h4>
        <h6>R$ <%= @product.price %>,00</h6>
      </div>

      <% if @product.user == current_user %>
        <td><%= link_to 'Atualizar', edit_product_path(@product), class: "btn btn-warning" %></td>
      <% end %>

      <% if @product.user != current_user && current_user%>
        <%= simple_form_for [@product, @order] do |f|%>
          <%= f.input :ask, label: "Quantos vocÃª deseja?" %>
          <%= f.button :submit, value: "Comprar", class: "btn btn-success" %>
        <% end %>
      <% end %>

      <%= link_to 'Voltar', products_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

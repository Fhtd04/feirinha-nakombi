  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 ">
    <div class="col mb-4">
      <div class="card_landing">
        <%= image_tag "carrotsBundle.jpg", class: "card_img" %>
        <div class="card-body">
          <h5 class="card-title">Descubra</h5>
          <p class="card-text">O hortifruti <strong>que você procura</strong></p>
        </div>
      </div>
    </div>
    <div class="col mb-4">
      <div class="card_landing">
        <%= image_tag "localProducer.jpg", class: "card_img" %>
